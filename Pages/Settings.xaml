<Page x:Class="ApplicationSettings_Klimov.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationSettings_Klimov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782"
      Title="Settings">

    <Grid Background="White">
        <Grid x:Name="gr_header" Height="60" VerticalAlignment="Top" Background="Black">
            <Label x:Name="text1" Content="Настройки" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"
                   Foreground="White" FontWeight="Bold" FontSize="20"/>
        </Grid>

        <Grid Margin="0,60,0,0">
            <Border BorderBrush="Black" BorderThickness="1" Height="54" Margin="10,21,10,0" VerticalAlignment="Top">
                <Grid>
                    <TextBox x:Name="tb_database" Height="23" Margin="9,19,135,9" TextWrapping="Wrap" Text=""
                             VerticalAlignment="Top"/>
                    <Button Click="OpenDataBase" Content="Выбрать" HorizontalAlignment="Right" Margin="0,19,10,0"
                            VerticalAlignment="Top" Width="120" Height="23"/>
                </Grid>
            </Border>
            <Label x:Name="text2" Content="База данных: " HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"
                   Background="White"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="45" Margin="10,96,10,0" VerticalAlignment="Top">
                <Grid>
                    <ComboBox SelectionChanged="SelectScreenResolution" Margin="10,10,10,0" VerticalAlignment="Top">
                        <TextBlock>800x450</TextBlock>
                        <TextBlock>800x600</TextBlock>
                        <TextBlock>1024x768</TextBlock>
                        <TextBlock>1152x864</TextBlock>
                        <TextBlock>1280x600</TextBlock>
                        <TextBlock>1280x720</TextBlock>
                        <TextBlock>1280x768</TextBlock>
                        <TextBlock>1280x800</TextBlock>
                        <TextBlock>1280x960</TextBlock>
                        <TextBlock>1280x1024</TextBlock>
                        <TextBlock>1360x768</TextBlock>
                        <TextBlock>1366x768</TextBlock>
                        <TextBlock>1400x1050</TextBlock>
                        <TextBlock>1400x900</TextBlock>
                        <TextBlock>1600x900</TextBlock>
                        <TextBlock>1680x900</TextBlock>
                        <TextBlock>1680x1050</TextBlock>
                        <TextBlock>1920x1080</TextBlock>
                    </ComboBox>
                </Grid>
            </Border>
            <Label x:Name="text3" Content="Разрешение: " HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top"
                   Background="White"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="100" Margin="10,160,10,0" VerticalAlignment="Top">
                <Grid>
                    <Grid Margin="0,0,0,51">
                        <Label x:Name="text4" Content="Цвет приложения: " HorizontalAlignment="Left" Margin="10,10,0,0"
                               VerticalAlignment="Top"/>
                        <Grid x:Name="gr_application" Margin="127,10,0,0" Background="Black" Height="27"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Width="49"/>
                        <Button Click="SelectColorApplication" Content="Выбрать" HorizontalAlignment="Left"
                               Margin="182,10,0,0" VerticalAlignment="Top" Width="150" Height="26"/>
                    </Grid>
                    <Grid Margin="0,50,0,1">
                        <Label x:Name="text5" Content="Цвет текста: " HorizontalAlignment="Left" Margin="10,10,0,0"
                               VerticalAlignment="Top"/>
                        <Grid x:Name="gr_text" Margin="127,10,0,0" Background="Black" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="49"/>
                        <Button Click="SelectColorText" Content="Выбрать" HorizontalAlignment="Left"
                               Margin="182,10,0,0" VerticalAlignment="Top" Width="150" Height="26"/>
                    </Grid>
                </Grid>
            </Border>
            <Label x:Name="text6" Content="Цвета: " HorizontalAlignment="Left" Margin="20,146,0,0" VerticalAlignment="Top"
                   Background="White"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="63" Margin="10,277,0,0"
                    VerticalAlignment="Top" Width="762">
                <Grid>
                    <Label x:Name="gr_font" Content="Segoe UI" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"
                           Width="614"/>
                    <Button Click="SelectFonts" Content="Выбрать" HorizontalAlignment="Left"
                           Margin="629,10,0,0" VerticalAlignment="Top" Width="121" Height="25"/>
                </Grid>
            </Border>
            <Label x:Name="text7" Content="Шрифт: " HorizontalAlignment="Left" Margin="20,265,0,0" VerticalAlignment="Top"
                   Background="White"/>
        </Grid>
    </Grid>
</Page>
